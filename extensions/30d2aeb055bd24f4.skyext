const message = require('message');
const command = require('command');
const embed = require('embed');

const args = command.suffix.trim().split(' ');

if (args.length < 2) {
	message.reply({
		embeds: [embed.create({
			title: 'üèÜ LoL Champion Mastery',
			description: 'Usage: lolmastery <region> <summoner#tag>\n\n' +
				'**Example:** lolmastery na1 Faker#KR1',
			color: embed.colors.ERROR,
		})],
	});
	return;
}

const region = args[0].toLowerCase();
const summonerInput = args.slice(1).join(' ');

const riotIdMatch = summonerInput.match(/^(.+)#(.+)$/);

if (!riotIdMatch) {
	message.reply({
		embeds: [embed.create({
			title: '‚ùå Invalid Format',
			description: 'Please use: name#tag',
			color: embed.colors.ERROR,
		})],
	});
	return;
}

const gameName = riotIdMatch[1];
const tagLine = riotIdMatch[2];

message.reply({
	embeds: [embed.create({
		title: 'üèÜ Champion Mastery',
		description: '**Player:** ' + gameName + '#' + tagLine + '\n' +
			'**Region:** ' + region.toUpperCase() + '\n\n' +
			'**View Mastery:**\n' +
			'‚Ä¢ [OP.GG](https://op.gg/summoners/' + region + '/' + encodeURIComponent(gameName) + '-' + encodeURIComponent(tagLine) + ')\n' +
			'‚Ä¢ [Champion Mastery Lookup](https://championmastery.gg/summoner?summoner=' + encodeURIComponent(gameName) + '&region=' + region + ')',
		color: embed.colors.GOLD,
		footer: { text: 'Mastery scores show champion proficiency' },
	})],
});