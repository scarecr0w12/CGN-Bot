const message = require('message');
const command = require('command');
const embed = require('embed');

const text = command.suffix.trim();

if (!text) {
	message.reply({
		embeds: [embed.create({
			title: 'ğŸ† Achievement',
			description: 'Usage: achievement <text>

Example: achievement Got Wood',
			color: embed.colors.ERROR,
		})],
	});
	return;
}

const encodedText = encodeURIComponent(text.slice(0, 50));
const imageUrl = 'https://api.popcat.xyz/achievement?icon=1&text=' + encodedText;

message.reply({
	embeds: [embed.create({
		title: 'ğŸ† Achievement Get!',
		image: { url: imageUrl },
		color: embed.colors.SUCCESS,
	})],
});