<!DOCTYPE html>
<html lang="en">
<head>
	<title><%= pageData.pageTitle %></title>
	<%
	// SEO for extension detail page
	if (typeof pageData !== "undefined" && pageData.extensionData) {
		const ext = pageData.extensionData;
		pageData.seo = {
			title: pageData.pageTitle,
			description: pageData.pageDescription,
			keywords: `${ext.name}, Discord bot extension, ${ext.type} extension, Discord ${ext.type}, Skynet extension, ${(ext.tags || []).join(', ')}`,
			type: "article",
			image: ext.owner?.avatar
		};
		pageData.breadcrumbs = [
			{ name: "Home", url: "/" },
			{ name: "Extensions", url: "/extensions" },
			{ name: ext.name, url: pageData.canonicalUrl }
		];
	}
	%>
	<%- include('../partials/head') %>
	
	<% if (pageData.extensionData) { %>
	<% const ext = pageData.extensionData; %>
	<!-- SoftwareApplication Schema -->
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "SoftwareApplication",
		"name": "<%= ext.name.replace(/"/g, '\\"') %>",
		"applicationCategory": "BotExtension",
		"operatingSystem": "Discord, Skynet Bot",
		"description": "<%= ext.description ? ext.description.replace(/"/g, '\\"').replace(/\n/g, ' ') : '' %>",
		"url": "<%= typeof hostingURL !== 'undefined' ? hostingURL.replace(/\/$/, '') : '' %><%= pageData.canonicalUrl %>",
		"installUrl": "<%= typeof hostingURL !== 'undefined' ? hostingURL.replace(/\/$/, '') : '' %>/extensions/<%= ext._id %>/install",
		"author": {
			"@type": "Person",
			"name": "<%= ext.owner?.name ? ext.owner.name.replace(/"/g, '\\"') : 'Unknown' %>",
			"image": "<%= ext.owner?.avatar || '' %>"
		},
		"offers": {
			"@type": "Offer",
			"price": "<%= ext.isPremium && ext.premium ? ext.premium.price_points : '0' %>",
			"priceCurrency": "<%= ext.isPremium ? 'VotePoints' : 'USD' %>"
		},
		"aggregateRating": {
			"@type": "AggregateRating",
			"ratingValue": "<%= ext.points > 0 ? Math.min(5, 3 + (ext.points / 100)) : 4 %>",
			"ratingCount": "<%= ext.points > 0 ? ext.points : 1 %>",
			"bestRating": "5",
			"worstRating": "1"
		},
		"datePublished": "<%= ext.accepted_at ? new Date(ext.accepted_at).toISOString() : new Date().toISOString() %>",
		"keywords": "<%= (ext.tags || []).join(', ') %>"
	}
	</script>
	
	<!-- BreadcrumbList Schema -->
	<% if (pageData.breadcrumbs && pageData.breadcrumbs.length > 0) { %>
	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "BreadcrumbList",
		"itemListElement": [
			<%- pageData.breadcrumbs.map((crumb, index) => JSON.stringify({
				"@type": "ListItem",
				"position": index + 1,
				"name": crumb.name,
				"item": typeof hostingURL !== 'undefined' ? hostingURL.replace(/\/$/, '') + crumb.url : crumb.url
			})).join(",\n\t\t\t") %>
		]
	}
	</script>
	<% } %>
	<% } %>
	
	<style>
	.ext-detail-hero {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		padding: 3rem 0;
		color: white;
	}
	.ext-detail-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}
	.ext-header {
		display: flex;
		align-items: flex-start;
		gap: 2rem;
		margin-bottom: 2rem;
	}
	.ext-icon {
		width: 80px;
		height: 80px;
		border-radius: var(--radius-lg);
		background: rgba(255, 255, 255, 0.2);
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 2rem;
		flex-shrink: 0;
	}
	.ext-header-content {
		flex: 1;
	}
	.ext-title {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
	}
	.ext-meta {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
		font-size: 0.9rem;
		opacity: 0.9;
	}
	.ext-meta-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}
	.ext-actions {
		display: flex;
		gap: 1rem;
		margin-top: 1.5rem;
	}
	.ext-content-grid {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2rem;
		margin-top: 2rem;
	}
	@media (max-width: 968px) {
		.ext-content-grid {
			grid-template-columns: 1fr;
		}
	}
	.ext-section {
		background: var(--color-bg-primary);
		border-radius: var(--radius-xl);
		padding: 1.5rem;
		box-shadow: var(--shadow-card);
		margin-bottom: 1.5rem;
	}
	.ext-section-title {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: var(--color-primary);
	}
	.ext-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}
	.ext-tag {
		background: var(--color-bg-secondary);
		padding: 0.25rem 0.75rem;
		border-radius: var(--radius-full);
		font-size: 0.8rem;
		color: var(--color-text-secondary);
	}
	.ext-author-card {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem;
		background: var(--color-bg-secondary);
		border-radius: var(--radius-lg);
	}
	.ext-author-avatar {
		width: 48px;
		height: 48px;
		border-radius: 50%;
	}
	.related-ext-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
		gap: 1rem;
	}
	.related-ext-card {
		background: var(--color-bg-primary);
		border-radius: var(--radius-lg);
		padding: 1rem;
		box-shadow: var(--shadow-sm);
		transition: transform 0.2s;
		text-decoration: none;
		color: inherit;
		display: block;
	}
	.related-ext-card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-card);
	}
	</style>
</head>
<body>
	<header id="header" class="hero is-primary is-bold" role="banner">
		<div class="hero-head">
			<%- include('../partials/header') %>
		</div>
	</header>

	<% if (pageData.extensionData) { %>
	<% const ext = pageData.extensionData; %>
	<section class="ext-detail-hero">
		<div class="container">
			<div class="ext-header">
				<div class="ext-icon">
					<i class="fa fa-<%= ext.type === 'command' ? 'terminal' : ext.type === 'keyword' ? 'comment' : ext.type === 'timer' ? 'clock' : 'bolt' %>"></i>
				</div>
				<div class="ext-header-content">
					<h1 class="ext-title"><%= ext.name %></h1>
					<div class="ext-meta">
						<span class="ext-meta-item">
							<i class="fa fa-tag"></i>
							<%= ext.type.charAt(0).toUpperCase() + ext.type.slice(1) %>
						</span>
						<span class="ext-meta-item">
							<i class="fa fa-arrow-up"></i>
							<%= ext.points || 0 %> upvotes
						</span>
						<% if (ext.isPremium) { %>
						<span class="ext-meta-item">
							<i class="fa fa-crown"></i>
							Premium
						</span>
						<% } %>
					</div>
					<div class="ext-actions">
						<a href="/extensions/<%= ext._id %>/install" class="button is-success is-medium">
							<span class="icon"><i class="fa fa-download"></i></span>
							<span>Install Extension</span>
						</a>
						<% if (authUser) { %>
						<button class="button is-light is-medium" onclick="upvoteExtension('<%= ext._id %>')">
							<span class="icon"><i class="fa fa-arrow-up"></i></span>
							<span><%= pageData.hasUpvoted ? 'Upvoted' : 'Upvote' %></span>
						</button>
						<% } else { %>
						<a href="/login?redirect=<%= encodeURIComponent(pageData.canonicalUrl) %>" class="button is-light is-medium">
							<span class="icon"><i class="fa fa-arrow-up"></i></span>
							<span>Upvote</span>
						</a>
						<% } %>
					</div>
				</div>
			</div>
		</div>
	</section>

	<main role="main" style="background: var(--color-bg-secondary);">
		<div class="ext-detail-container">
			<div class="ext-content-grid">
				<div>
					<!-- Description -->
					<div class="ext-section">
						<h2 class="ext-section-title">About This Extension</h2>
						<div class="content">
							<%- ext.description || 'No description provided.' %>
						</div>
					</div>

					<!-- Tags -->
					<% if (ext.tags && ext.tags.length > 0) { %>
					<div class="ext-section">
						<h2 class="ext-section-title">Tags</h2>
						<div class="ext-tags">
							<% ext.tags.forEach(tag => { %>
							<a href="/extensions?tag=<%= tag %>" class="ext-tag">
								<i class="fa fa-tag"></i> <%= tag %>
							</a>
							<% }); %>
						</div>
					</div>
					<% } %>

					<!-- Related Extensions -->
					<% if (pageData.relatedExtensions && pageData.relatedExtensions.length > 0) { %>
					<div class="ext-section">
						<h2 class="ext-section-title">Related Extensions</h2>
						<div class="related-ext-grid">
							<% pageData.relatedExtensions.forEach(rel => { %>
							<a href="/extensions/view/<%= rel._id %>/<%= rel.slug || '' %>" class="related-ext-card">
								<h3 style="font-size: 1rem; font-weight: 600; margin-bottom: 0.5rem;"><%= rel.name %></h3>
								<p style="font-size: 0.85rem; color: var(--color-text-secondary); line-height: 1.4;">
									<%= rel.description ? rel.description.substring(0, 80) + '...' : '' %>
								</p>
								<div style="margin-top: 0.5rem; font-size: 0.75rem; color: var(--color-text-muted);">
									<i class="fa fa-arrow-up"></i> <%= rel.points || 0 %>
								</div>
							</a>
							<% }); %>
						</div>
					</div>
					<% } %>
				</div>

				<aside>
					<!-- Author -->
					<% if (ext.owner) { %>
					<div class="ext-section">
						<h2 class="ext-section-title">Created By</h2>
						<div class="ext-author-card">
							<img src="<%= ext.owner.avatar %>" alt="<%= ext.owner.name %>" class="ext-author-avatar">
							<div>
								<div style="font-weight: 600;"><%= ext.owner.name %></div>
								<div style="font-size: 0.8rem; color: var(--color-text-muted);">Extension Developer</div>
							</div>
						</div>
					</div>
					<% } %>

					<!-- Stats -->
					<div class="ext-section">
						<h2 class="ext-section-title">Statistics</h2>
						<div style="display: flex; flex-direction: column; gap: 0.75rem;">
							<div style="display: flex; justify-content: space-between;">
								<span style="color: var(--color-text-secondary);">Type</span>
								<strong><%= ext.type.charAt(0).toUpperCase() + ext.type.slice(1) %></strong>
							</div>
							<div style="display: flex; justify-content: space-between;">
								<span style="color: var(--color-text-secondary);">Upvotes</span>
								<strong><%= ext.points || 0 %></strong>
							</div>
							<% if (ext.accepted_at) { %>
							<div style="display: flex; justify-content: space-between;">
								<span style="color: var(--color-text-secondary);">Published</span>
								<strong><%= new Date(ext.accepted_at).toLocaleDateString() %></strong>
							</div>
							<% } %>
						</div>
					</div>

					<!-- Actions -->
					<div class="ext-section">
						<h2 class="ext-section-title">Actions</h2>
						<div style="display: flex; flex-direction: column; gap: 0.75rem;">
							<a href="/extensions/<%= ext._id %>/install" class="button is-fullwidth is-primary">
								<span class="icon"><i class="fa fa-download"></i></span>
								<span>Install</span>
							</a>
							<a href="/extensions" class="button is-fullwidth is-light">
								<span class="icon"><i class="fa fa-arrow-left"></i></span>
								<span>Back to Gallery</span>
							</a>
						</div>
					</div>
				</aside>
			</div>
		</div>
	</main>
	<% } %>

	<%- include('../partials/footer') %>
	<%- include('../partials/scroll-top-button') %>

	<script>
	async function upvoteExtension(extId) {
		try {
			const res = await fetch(`/extensions/${extId}/upvote`, { method: 'POST' });
			if (res.ok) {
				location.reload();
			} else {
				alert('Failed to upvote extension');
			}
		} catch (err) {
			alert('An error occurred');
		}
	}
	</script>
</body>
</html>
