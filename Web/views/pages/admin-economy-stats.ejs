<!DOCTYPE html>
<html lang="en">
<head>
	<title><%= serverData.name %> Economy Stats - Skynet Admin Console</title>
	<%- include('../partials/head') %>
	<style>
		.economy-card {
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			color: white;
			border-radius: 12px;
			padding: 1.5rem;
			margin-bottom: 1rem;
		}
		.economy-card.gold {
			background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
		}
		.economy-card.green {
			background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
		}
		.economy-card.orange {
			background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
		}
		.economy-card .stat-value {
			font-size: 2.5rem;
			font-weight: bold;
		}
		.economy-card .stat-label {
			opacity: 0.9;
			font-size: 0.9rem;
		}
		.leaderboard-item {
			display: flex;
			align-items: center;
			padding: 0.75rem 1rem;
			border-bottom: 1px solid #eee;
			transition: background 0.2s;
		}
		.leaderboard-item:hover {
			background: #f8f9fa;
		}
		.leaderboard-rank {
			width: 40px;
			height: 40px;
			border-radius: 50%;
			display: flex;
			align-items: center;
			justify-content: center;
			font-weight: bold;
			margin-right: 1rem;
		}
		.leaderboard-rank.gold { background: linear-gradient(135deg, #ffd700, #ffed4e); color: #333; }
		.leaderboard-rank.silver { background: linear-gradient(135deg, #c0c0c0, #e8e8e8); color: #333; }
		.leaderboard-rank.bronze { background: linear-gradient(135deg, #cd7f32, #e8a862); color: #fff; }
		.leaderboard-rank.default { background: #e9ecef; color: #666; }
		.leaderboard-info {
			flex: 1;
		}
		.leaderboard-username {
			font-weight: 600;
			color: #333;
		}
		.leaderboard-details {
			font-size: 0.85rem;
			color: #666;
		}
		.leaderboard-amount {
			font-weight: bold;
			font-size: 1.1rem;
		}
		.distribution-bar {
			height: 30px;
			border-radius: 6px;
			overflow: hidden;
			display: flex;
			margin-bottom: 0.5rem;
		}
		.distribution-segment {
			display: flex;
			align-items: center;
			justify-content: center;
			color: white;
			font-size: 0.75rem;
			font-weight: bold;
			min-width: 40px;
		}
		.search-box {
			position: relative;
		}
		.search-box .icon {
			position: absolute;
			left: 10px;
			top: 50%;
			transform: translateY(-50%);
			color: #999;
		}
		.search-box input {
			padding-left: 35px;
		}
	</style>
</head>
<body onload="SkynetUtil.SFS();">
	<%- include('../partials/dashboard-header') %>
	<%- include('../partials/dashboard-socket-updates') %>

	<section class="section is-white">
		<div class="container">
			<div class="columns">
				<div id="menu" class="column is-one-quarter">
					<%- include('../partials/admin-menu') %>
				</div>
				<div class="column">
					<h1 class="title">
						<span class="icon"><i class="fas fa-chart-line"></i></span>
						Economy Statistics
					</h1>
					
					<!-- Overview Cards -->
					<div class="columns is-multiline">
						<div class="column is-3">
							<div class="economy-card">
								<div class="stat-value"><%= pageData.stats.totalCoins.toLocaleString() %></div>
								<div class="stat-label">ğŸ’° Total Coins in Circulation</div>
							</div>
						</div>
						<div class="column is-3">
							<div class="economy-card gold">
								<div class="stat-value"><%= pageData.stats.totalBanked.toLocaleString() %></div>
								<div class="stat-label">ğŸ¦ Total Banked</div>
							</div>
						</div>
						<div class="column is-3">
							<div class="economy-card green">
								<div class="stat-value"><%= pageData.stats.usersWithEconomy %></div>
								<div class="stat-label">ğŸ‘¥ Users with Economy</div>
							</div>
						</div>
						<div class="column is-3">
							<div class="economy-card orange">
								<div class="stat-value"><%= pageData.stats.averageNetWorth.toLocaleString() %></div>
								<div class="stat-label">ğŸ“Š Avg Net Worth</div>
							</div>
						</div>
					</div>

					<!-- Wealth Distribution -->
					<div class="box">
						<h2 class="subtitle">
							<span class="icon"><i class="fas fa-chart-pie"></i></span>
							Wealth Distribution
						</h2>
						<div class="distribution-bar">
							<% const total = pageData.stats.distribution.poor + pageData.stats.distribution.middle + pageData.stats.distribution.rich + pageData.stats.distribution.wealthy; %>
							<% if (pageData.stats.distribution.poor > 0) { %>
							<div class="distribution-segment" style="background: #e74c3c; width: <%= (pageData.stats.distribution.poor / total * 100) %>%;">
								<%= pageData.stats.distribution.poor %>
							</div>
							<% } %>
							<% if (pageData.stats.distribution.middle > 0) { %>
							<div class="distribution-segment" style="background: #f39c12; width: <%= (pageData.stats.distribution.middle / total * 100) %>%;">
								<%= pageData.stats.distribution.middle %>
							</div>
							<% } %>
							<% if (pageData.stats.distribution.rich > 0) { %>
							<div class="distribution-segment" style="background: #27ae60; width: <%= (pageData.stats.distribution.rich / total * 100) %>%;">
								<%= pageData.stats.distribution.rich %>
							</div>
							<% } %>
							<% if (pageData.stats.distribution.wealthy > 0) { %>
							<div class="distribution-segment" style="background: #9b59b6; width: <%= (pageData.stats.distribution.wealthy / total * 100) %>%;">
								<%= pageData.stats.distribution.wealthy %>
							</div>
							<% } %>
						</div>
						<div class="columns is-mobile has-text-centered" style="font-size: 0.85rem;">
							<div class="column">
								<span style="color: #e74c3c;">â—</span> Poor (0-1k)
							</div>
							<div class="column">
								<span style="color: #f39c12;">â—</span> Middle (1k-10k)
							</div>
							<div class="column">
								<span style="color: #27ae60;">â—</span> Rich (10k-50k)
							</div>
							<div class="column">
								<span style="color: #9b59b6;">â—</span> Wealthy (50k+)
							</div>
						</div>
					</div>

					<!-- Leaderboard -->
					<div class="box">
						<div class="level">
							<div class="level-left">
								<h2 class="subtitle mb-0">
									<span class="icon"><i class="fas fa-trophy"></i></span>
									Economy Leaderboard
								</h2>
							</div>
							<div class="level-right">
								<div class="field search-box">
									<span class="icon"><i class="fas fa-search"></i></span>
									<input class="input" type="text" id="leaderboard-search" placeholder="Search users..." onkeyup="filterLeaderboard()">
								</div>
							</div>
						</div>
						
						<div id="leaderboard-container">
							<% if (pageData.leaderboard.length === 0) { %>
								<div class="has-text-centered py-5">
									<span class="icon is-large has-text-grey-light">
										<i class="fas fa-coins fa-3x"></i>
									</span>
									<p class="has-text-grey mt-3">No economy data yet. Users need to use economy commands to appear here.</p>
								</div>
							<% } else { %>
								<% pageData.leaderboard.forEach((user, index) => { %>
								<div class="leaderboard-item" data-username="<%= user.username.toLowerCase() %>">
									<div class="leaderboard-rank <%= index === 0 ? 'gold' : index === 1 ? 'silver' : index === 2 ? 'bronze' : 'default' %>">
										<%= index + 1 %>
									</div>
									<img src="<%= user.avatar %>" alt="Avatar" style="width: 40px; height: 40px; border-radius: 50%; margin-right: 1rem;">
									<div class="leaderboard-info">
										<div class="leaderboard-username"><%= user.username %></div>
										<div class="leaderboard-details">
											ğŸ’µ Wallet: <%= user.wallet.toLocaleString() %> | ğŸ¦ Bank: <%= user.bank.toLocaleString() %>
										</div>
									</div>
									<div class="leaderboard-amount has-text-success">
										<%= user.netWorth.toLocaleString() %> ğŸ’°
									</div>
								</div>
								<% }); %>
							<% } %>
						</div>
					</div>

					<!-- Recent Activity -->
					<% if (pageData.recentActivity && pageData.recentActivity.length > 0) { %>
					<div class="box">
						<h2 class="subtitle">
							<span class="icon"><i class="fas fa-history"></i></span>
							Top Earners & Losers
						</h2>
						<div class="columns">
							<div class="column">
								<h3 class="is-size-6 has-text-weight-bold has-text-success mb-3">ğŸ† Top Earners</h3>
								<% pageData.topEarners.forEach(user => { %>
								<div class="is-flex is-justify-content-space-between py-2" style="border-bottom: 1px solid #eee;">
									<span><%= user.username %></span>
									<span class="has-text-success">+<%= user.totalEarned.toLocaleString() %></span>
								</div>
								<% }); %>
							</div>
							<div class="column">
								<h3 class="is-size-6 has-text-weight-bold has-text-danger mb-3">ğŸ“‰ Biggest Losers</h3>
								<% pageData.topLosers.forEach(user => { %>
								<div class="is-flex is-justify-content-space-between py-2" style="border-bottom: 1px solid #eee;">
									<span><%= user.username %></span>
									<span class="has-text-danger">-<%= user.totalLost.toLocaleString() %></span>
								</div>
								<% }); %>
							</div>
						</div>
					</div>
					<% } %>

				</div>
			</div>
		</div>
	</section>

	<%- include('../partials/footer') %>
	<%- include('../partials/scroll-top-button') %>

	<script>
		function filterLeaderboard() {
			const searchTerm = document.getElementById('leaderboard-search').value.toLowerCase();
			const items = document.querySelectorAll('.leaderboard-item');
			
			items.forEach(item => {
				const username = item.getAttribute('data-username');
				if (username.includes(searchTerm)) {
					item.style.display = 'flex';
				} else {
					item.style.display = 'none';
				}
			});
		}
	</script>
</body>
</html>
